<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >
    <TextView 
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item1_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_item1_marginleft"
            android:textColor="@drawable/itemcolor"
            android:textSize="@dimen/text_size_38"
            /> 
    
    <TextView 
            android:id="@+id/item_setting"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_item1_height"
            android:layout_marginRight="@dimen/list_item1_marginright"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@drawable/itemcolor"
            android:textSize="@dimen/text_size_38"
            android:visibility="gone"
            />
    

</RelativeLayout>
