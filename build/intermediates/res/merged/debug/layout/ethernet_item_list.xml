<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/ethernet_item_title"
        android:layout_width="@dimen/ethernet_item_title_width"
        android:layout_height="@dimen/ethernet_item_title_height"
        android:layout_marginLeft="@dimen/ethernet_item_title_leftmargin"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@color/settings_9a9a9a"
        android:textSize="@dimen/text_size_38" />

    <RelativeLayout
        android:layout_width="@dimen/ethernet_item_title_width"
        android:layout_height="@dimen/ethernet_item_title_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/ethernet_item_rlyout_leftmargin"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ethernet_item_left_arrow"
            android:layout_width="@dimen/ethernet_item_arrow_width"
            android:layout_height="@dimen/ethernet_item_arrow_height"
            android:focusable="false"
            android:src="@drawable/left_arrow_unselected"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ethernet_item_content_tv"
            android:layout_width="@dimen/ethernet_item_content_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ethernet_item_left_arrow"
            android:gravity="center_horizontal|center"
            android:textColor="@color/settings_9a9a9a"
            android:textSize="@dimen/text_size_38"
            android:visibility="visible" />

        <EditText
            android:id="@+id/ethernet_item_content_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ethernet_item_left_arrow"
            android:background="@android:color/transparent"
            android:digits="0123456789."
            android:focusable="false"
            android:gravity="center_vertical|center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/settings_9a9a9a"
            android:textSize="@dimen/text_size_38"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ethernet_item_right_arrow"
            android:layout_width="@dimen/ethernet_item_arrow_width"
            android:layout_height="@dimen/ethernet_item_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ethernet_item_right_arrow_rightmargin"
            android:focusable="false"
            android:src="@drawable/right_arrow_unselected" />
    </RelativeLayout>
</RelativeLayout><!-- From: file:/D:/androidspace/CloudShanDongSetting/res/layout/ethernet_item_list.xml -->